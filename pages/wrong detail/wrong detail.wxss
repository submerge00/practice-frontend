.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
}
.box{
  color: rgb(255, 255, 255);
  background-color: rgb(83, 128, 253);
  text-align: center;
  padding-top: 25px;
  font-size: 25px;
  width: 100%;
  height: 20%;            
  position: absolute;
  border-bottom-left-radius:50rpx ;
  border-bottom-right-radius:50rpx ;
  top: 0;
  left: 0;
}
.container{
  width: 100vw;
  height: 100vh;
  position: relative;
}
.stack-top{
  z-index: 9;
  margin: 0 auto;
  padding-top: 10px;
  width: 90%;
  height: 83%;
  background-color: white;
  border-radius:30px ;
  box-shadow: 5px 5px 15px 5px rgba(180, 180, 180, 0.425);
  position: absolute;
  top:80px;
  overflow:scroll;
}
.demo {
  border:1px solid rgb(180, 180, 180);
  border-radius: 50rpx;
  font-size: x-large;
  width: fit-content;
  padding: 10px 20px;
  margin:10px auto;
  background-color: #ffffff;
  color: rgb(180, 180, 180);
}