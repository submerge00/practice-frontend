/* pages/batch_import/batch_import.wxss */
.top-bg {
  height: 290rpx;
  background-color: #619aef;
  background-image: url("https://i.ibb.co/QDT8hjP/bgp.png");
}

/* 圆角盒子 */
.box {
  height: 625px;
  background-color:
  rgb(248, 248, 248);
  margin-top: -65rpx;
  border-top-left-radius: 80rpx;
  border-top-right-radius: 80rpx;
  padding: 26rpx 20rpx 0;
  z-index: 100;
  position: relative; /* 设置相对定位 */
}

/* 导入类型盒子浮动在top盒子和圆角盒子之间 */
.import-type {
  width: 70%;
  height: 90rpx;
  background-color: rgb(255, 255, 255);
  position: absolute; 
  top: -35rpx; 
  left: 15%; 
  display: flex; 
  justify-content: space-between; 
  text-align: center;
  line-height: 90rpx; 
  color: white;
  font-size: 28rpx;
  border-radius: 50rpx;
}

.single-import {
  background-color:#fff; 
  border: none; 
  color: rgb(20, 20, 20); 
  font-size: 32rpx; 
  padding: 8rpx 28rpx;
  border-radius: 50rpx;
  outline: none; 
  flex: 1; 
  text-align: center; 
}

.batch-import {
  background-color:#afaeae; 
  border: none; 
  color: rgb(20, 20, 20); 
  font-size: 32rpx; 
  padding: 8rpx 28rpx;
  border-radius: 50rpx;
  outline: none; 
  flex: 1; 
  text-align: center; 
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 30px;
  margin-left: 20px;
}

.container {
  width: 80%;
  height: 500px;
  margin-left: 10%;
  border: 2px dashed #c3d6f3;
  border-radius: 50rpx;
  margin-top: 20px;
  background-color: #fff;
}

.text1 ,
.text2 {
  font-size: 34rpx;
  color: #5f5f5f;
}

.text1 {
  margin-left: 15px;
  margin-bottom: 5px;
}

.text2 {
  margin-bottom: 45px;
}

.import-btn {
  background-color:#a2c1d1;
  color: white;
  font-weight: 600;
  font-size: 40rpx;
}