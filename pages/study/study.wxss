/* pages/study/study.wxss */
button {
  width: 26%;
  height: 40px; 
  font-size: 32rpx; 
  border-radius: 15rpx;
}
/* 设置背景颜色 */
.top-bg {
  height: 290rpx;
  background-color:#619aef;
  background-image: url("https://i.ibb.co/QDT8hjP/bgp.png");
}
 
/* 圆角盒子 */
.box {
  background-color:rgb(255, 255, 255);
  margin-top: -65rpx;
  border-top-left-radius: 80rpx;
  border-top-right-radius: 80rpx;
  padding: 26rpx 20rpx 0; /* 增加顶部内边距 */
  z-index: 100;
}

.search-bar {
  width: 90%;
  display: flex;
  position: relative;
  margin: 0 auto;
  border: solid #d9dadc; 
  border-radius: 50rpx;
}

.search-icon {
  position: absolute;
  top: 45%; 
  left: 67rpx; 
  width: 30rpx;
  height: 30rpx;
  background-size: contain;
  transform: translateY(-50%);
  pointer-events: none; 
}

.search-input {
  background-color: #fff;
  height:50px;
  width: 78%;
  margin-left: 20px;
  padding-left: 40px;
  border: none;
  /* border: solid #d9dadc; */
}

.search-btn {
  border-radius: 50rpx;
  margin-top: 10rpx;
  margin-right: 20px;
  background-color: rgb(153, 153, 153);
}

.list-bar {
  margin-top: 50rpx;
}

.list-item {
  width: 90%;
  margin-left: 10px;
  padding: 10rpx;
  background-color: rgb(247, 247, 247);
  border: 1px solid rgb(247, 247, 247);
  border-radius: 30rpx;
  margin-bottom: 25px;
}



.title {
  margin-top: 5rpx;
  margin-left: 5px;
  font-size: 36rpx;
  font-weight: bold;
}

.description {
  margin-top: 20rpx;
  margin-left: 5px;
  font-size: 30rpx;
}

.buttons {
  margin-top: 15rpx;
}

.button-left {
  margin-top: 20rpx;
  margin-left: 5rpx;
  margin-bottom: 8rpx;
}

.button-right {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 8rpx;
}


/* 输入框模态框样式 */
.modal {
  position: fixed; /* 固定定位，确保模态框始终在屏幕上 */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明背景 */
  display: flex;
  justify-content: center; 
  align-items: center;
  z-index: 9999; 
  font-size: 17px;
}

.modal-content {
  width: 80%; 
  max-width: 600rpx; 
  background-color: #fff; 
  padding: 20rpx; 
  border-radius: 16rpx; 
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); 
  padding-left: 10rpx;
}

.input-container {
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.input-style {
  width: 100%; /* 输入框占满容器 */
  height: 50rpx;
  padding-left: 10rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
  border: 1px solid #ccc; 
  font-size: 28rpx;
}

.introducing-title,
textarea{
  display: block;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

textarea {
  width: 96%; /* 输入框占满容器 */
  height: 300rpx;
  padding-left: 10rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
  border: 1px solid #ccc; /* 边框颜色 */
  font-size: 28rpx;
}


.radio-group {
  display: flex;
  flex-direction: row; 
  gap: 20rpx; /* 控制单选项之间的间距 */
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  margin-top: 10rpx;
  margin-right: 25rpx; 
  margin-bottom: 25rpx;
}

.button-example {
  display: flex;
  justify-content: space-between; /* 确保按钮之间的间距 */
}
